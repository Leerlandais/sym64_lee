{% extends 'template.front.html.twig' %}

        {% block featured %}
            <!-- Featured Listings Start -->
            <section class="featured-lis" >
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 wow fadeIn" data-wow-delay="0.5s">
                            <h3 class="section-title">Featured Articles</h3>
                            <div id="new-products" class="owl-carousel">

                                {% set shuffleArts = arts|slice(0, 12) %}
                                {% for art in shuffleArts %}


                                    {# If the text is longer than 250 chars, cut it #}
                                    {% set truncateText = art.text|length > 250 ? art.text|slice(0, 250) : art.text %}
                                    {# Then find the last ' ' in the cut the rest off #}
                                    {% set lastSpace = truncateText|split(' ')|length - 1 %}
                                    {% set truncatedWords = truncateText|split(' ')|slice(0, lastSpace)|join(' ') %}

                                    {% set finalText = truncatedWords ~ '...' %}

                                <div class="item">
                                    <div class="product-item">
                                        <div class="carousel-thumb">
                                            <p>{{ finalText }}</p>
                                            <div class="overlay">
                                                <a href="#"><i class="fa fa-link"></i></a>
                                            </div>
                                        </div>
                                        <a href="#" class="item-name"><strong>{{ art.title }}</strong></a>
                                        <span class="price">{{ art.user.username }}</span>
                                    </div>
                                </div>

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Featured Listings End -->
    {% endblock %}


